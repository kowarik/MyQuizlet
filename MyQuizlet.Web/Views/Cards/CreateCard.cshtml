@using MyQuizlet.Application.CQRSFeatures.Card.Commands.CreateCard;
@using MyQuizlet.Domain.Enums;
@model CreateCardCommand;

@{
    ViewBag.Title = "Create card";
}

<h1>Create card</h1>

<form asp-controller="Cards" asp-action="CreateCard" method="post">
    <div class="row justify-content-center">
        <a class="btn btn-outline-primary"  asp-controller="Cards" asp-action="GetAllCards">Back to Cards List</a>
        <div>
            <label asp-for="Term" class="form-label">Term:</label>
            <input class="form-control" asp-for="Term" placeholder="Enter" />
            <span asp-validation-for="Term" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Definition">Definition:</label>
            <input class="form-control" asp-for="Definition" placeholder="Enter" />
            <span asp-validation-for="Definition" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="EnglishLevel">English Level:</label>
            <select class="form-select" asp-for="EnglishLevel" asp-items="Html.GetEnumSelectList<EnglishLevel>()"></select>
            <span asp-validation-for="EnglishLevel" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="DeckId">Deck:</label>
            <select class="form-select" asp-for="DeckId" asp-items="ViewBag.Decks"></select>
            <span asp-validation-for="DeckId" class="text-danger"></span>
        </div>

        <h5>Are you sure to create this card?</h5>
        <button class="btn btn-success">Create</button>
    </div>
</form>