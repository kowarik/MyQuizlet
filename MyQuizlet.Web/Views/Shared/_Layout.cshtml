<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MyQuizlet</a>
                <div class="navbar-nav">
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="ChooseGame">Play Game</span></a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="CardsManager">Cards Manager</a>
                
                    @*когда не авторизован*@
                    <a class="nav-item nav-link disabled" asp-controller="Home" asp-action="LogIn">LogIn</a>
                
                    @*когда авторизован*@
                    <a class="nav-item nav-link disabled" asp-controller="Home" asp-action="ProfileSettings">Settings</a>
                    <a class="nav-item nav-link disabled" asp-controller="Home" asp-action="LogOut">LogOut</a>
                </div>
            </nav>

            <div>
                @RenderBody()
            </div>

            <div>
                @RenderSection("footer_section", false)
            </div>
        </div>
    </body>
</html>
